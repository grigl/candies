$("#<%= @order.state %> .wrapper").html('<%= escape_javascript(render "checkout/#{@order.state}") %>');
$(document).trigger('html-inserted');
var previousPage = $(".current")
previousPage.hide('slide', {direction: 'left'}, 1000);
previousPage.removeClass('current');
$("#<%= @order.state %>").addClass('current');
$("#<%= @order.state %>").show('slide', {direction: 'right'}, 1000);


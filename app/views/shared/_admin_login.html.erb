<div class="form-box">
	<% if params["from_admin"] == "true" %>
		<% add_action = "?from_admin=true" %>
		<% is_remote = false %>
	<% else %>
		<% add_action = "" %>
		<% is_remote = true %>
	<% end %>
    <%= form_for :user, :url => user_session_path + add_action, remote: is_remote do |f| %>
      <div class="form-item w346">
        <%= f.label :email , 'EMAIL' %>
        <%= f.text_field :email, class: 'textfield' %>
      </div>
      <div class="form-item w346">
        <%= f.label :password , 'ПАРОЛЬ' %>
        <%= f.password_field :password, class: 'textfield' %>
      </div>
      <div class="form-item w110">
        <div class="checkbox-box">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'Запомнить' %>
        </div>
      </div>
      <div class="form-item w94">
        <input type="submit" class="button" value="ВОЙТИ">
      </div>
    <% end %>
  </div>

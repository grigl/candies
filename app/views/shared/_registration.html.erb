      <div class="form-box">
        <% @user = User.new %>
        <%= form_for :user, :url => registration_path(@user), remote: true do |f| %>
          <div class="form-item w346">
            <div class="errorlist" style="display:none;">Уже занят!</div>
            <%= f.label :email, 'EMAIL' %>
            <%= f.text_field :email, class: 'textfield' %>
          </div>
          <div class="form-item w346">
            <%= f.label :password, 'ПАРОЛЬ' %>
            <%= f.password_field :password, class: 'textfield' %>
          </div>
          <div class="form-item w346">
            <div class="errorlist" style="display:none;">Подтверждение Пароля не совпадает!</div>
            <%= f.label :password_confirmation, 'ПОДТВЕРДИТЕ ПАРОЛЬ' %>
            <%= f.password_field :password_confirmation, class: 'textfield' %>
          </div>
          <div class="form-item w150">
            <%= f.label :firstname, 'ИМЯ' %>
            <%= f.text_field :firstname, class: 'textfield' %>
          </div>
          <div class="form-item w196">
            <%= f.label :lastname, 'ФАМИЛИЯ' %>
            <%= f.text_field :lastname, class: 'textfield' %>
          </div>
          <div class="form-item w346">
            <%= f.label :phone, 'ТЕЛЕФОН' %>
            <%= f.text_field :phone, class: 'textfield' %>
          </div>
          <%= f.fields_for :address do |address_form| %>
            <%= address_form.hidden_field :default, value: true %>
            <div class="form-item w346">
              <%= address_form.label :address1, 'АДРЕС' %>
              <%= address_form.text_area :address1, class: 'textfield' %>
            </div>
            <div class="form-item w144">
              <%= address_form.label :country_id, 'СТРАНА' %>
              <%= address_form.collection_select :country_id, available_countries, :id, :name, {}, class: 'select' %>
            </div>
            <div class="form-item w202">
              <%= address_form.label :city, 'ГОРОД' %>
              <%= address_form.text_field :city, :class => 'textfield' %>
            </div>
            <div class="form-item w210">
              <%= address_form.label :state, 'ОБЛАСТЬ' %>
              <%= address_form.collection_select :state_id, available_countries.first.states, :id, :name, {}, class: 'select' %> 
            </div>
            <div class="form-item w138 mew88">
              <%= address_form.label :zipcode, 'ИНДЕКС' %>
              <%= address_form.text_field :zipcode, :class => 'textfield number', maxlength: '6' %>
            </div>
            
            <div class="form-item w346" align="right">
              <input type="submit" class="button" value="зарегистрироваться">
            </div>
          <% end %>
        <% end %>
      </div>

<h3 class="large"><a href="login" class="dotted login_link">ЛОГИН</a></h3>

<h3 class="right"><a id="login_link" href="login" class="dotted">ЛОГИН</a></h3>
      
      <div class="form-box">
        <% @user = User.new %>
        <%= form_for :user, :url => registration_path(@user), remote: true do |f| %>
          <div class="form-item w346">
<!--             <label>ИМЯ ПОЛЬЗОВАТЕЛЯ</label>
            <input type="text" class="textfield"> -->
            <div class="errorlist" style="display:none;">Уже занят!</div>
            <%= f.label :email, 'EMAIL' %>
            <%= f.text_field :email, class: 'textfield' %>
          </div>
          <div class="form-item w346">
           <!--  <label>ПАРОЛЬ</label>
            <input type="password" class="textfield"> -->
            <%= f.label :password, 'ПАРОЛЬ' %>
            <%= f.password_field :password, class: 'textfield' %>
          </div>
          <div class="form-item w346">
            <div class="errorlist" style="display:none;">Подтверждение Пароля не совпадает!</div>
<!--             <label>ПОДТВЕРДИТЕ ПАРОЛЬ</label>
            <input type="password" class="textfield error"> -->
            <%= f.label :password_confirmation, 'ПОДТВЕРДИТЕ ПАРОЛЬ' %>
            <%= f.password_field :password_confirmation, class: 'textfield' %>
          </div>
          <%= f.fiels_for @user.address.build do |address_form| %>
            <div class="form-item w150">
<!--               <label>ИМЯ</label>
              <input type="text" class="textfield"> -->
              <%= address_form.label :firstname, 'ИМЯ' %>
              <%= address_form.password_field :firstname, class: 'textfield' %>
            </div>
            <div class="form-item w196">
<!--               <label>ФАМИЛИЯ</label>
              <input type="text" class="textfield"> -->
              <%= address_form.label :lastname, 'ФАМИЛИЯ' %>
              <%= address_form.password_field :lastname, class: 'textfield' %>
            </div>
            <div class="form-item w94">
              <label>ТЕЛЕФОН</label>
              <input type="text" class="textfield">
            </div>
            <div class="form-item w252">
              <label>&nbsp;</label>
              <input type="text" class="textfield">
            </div>
            <div class="form-item w346">
              <label>АДРЕС</label>
              <textarea class="textfield"></textarea>
            </div>
            <div class="form-item w144">
              <label>СТРАНА</label>
              <select class="select">
                <option></option>
              </select>
            </div>
            <div class="form-item w202">
              <label>ГОРОД</label>
              <select class="select">
                <option></option>
              </select>
            </div>
            <div class="form-item w210">
              <label>ОБЛАСТЬ</label>
              <select class="select">
                <option></option>
              </select>
            </div>
            <div class="form-item w138">
              <label>ИНДЕКС</label>
              <input type="text" class="textfield">
            </div>
            
            <div class="form-item w346" align="right">
              <input type="submit" class="button" value="зарегистрироваться">
            </div>
          <% end %>
        <% end %>
      </div>
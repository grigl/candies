      <h3>
        КОНТАКТНЫЕ ДАННЫЕ
      </h3>
      
      <div class="checkout-form">
        <%= form_for current_user, url: user_registration_path, remote: true do |f| %>
          <%= f.fields_for :addresses, current_user.default_address do |address_form| %>
          <div class="form-item w175">
            <%= address_form.label :firstname, 'ИМЯ' %>
            <%= address_form.text_field :firstname, class: 'textfield' %>
          </div>
          <div class="form-item w240">
            <%= address_form.label :lastname, 'ФАМИЛИЯ' %>
            <%= address_form.text_field :lastname, class: 'textfield' %>
          </div>
          <% end %>
          <div class="form-item w416">
            <%= f.label :email, 'EMAIL' %>
            <%= f.text_field :email, class: 'textfield' %>
          </div>
          <%= f.fields_for :addresses, current_user.default_address do |address_form| %>
          <div class="form-item w416">
            <%= address_form.label :phone, 'ТЕЛЕФОН' %>
            <%= address_form.text_field :phone, class: 'textfield' %>
          </div>
          <% end %>
          <div class="form-item w94">
            <a href="/back" id="show_accaunt" class="button">ОТМЕНИТЬ</a>
          </div>
          <div class="form-item w322" align="right">
            <input type="submit" class="button" value="СОХРАНИТЬ">
          </div>
        <% end %>
      </div>
      
      <div class="user-address">
        <p>
          Адрес по умолчанию :
        </p>
        <h5>
          <%= current_user.default_address.address1 %><br />
          <%= current_user.default_address.city %>, <%= current_user.default_address.state %><br />
          <%= current_user.default_address.country %>
        </h5>
        
        <p>
          <a href="#">Посмотреть / Редактировать  адресную книгу</a>
          Всего адресов: 2
        </p>
      </div>
      <div class="dotted">&nbsp;</div><br><br>
      
      <div class="order-history">
        <h3 class="left">История заказов :</h3>
        <ul class="order-history-list">
          <% if current_user.orders.empty? %>
            У вас еще нет завершенных заказов.
          <% else %>
            <% current_user.orders.select { |order| order.completed? }.each do |order| %>
            <li class="order-history-item">
              <p class="date"><%= order.completed_at %></p>
              <h4 class="order-history-name">
                Заказ № <%= order.number %>
                <span><%= number_to_currency order.total %></span>
              </h4>
              <div class="order-history-info">
                <div class="info dotted">
                  <p>Оплата: <%= order.payment_method.name %></p>
                  <p>Плательщик: <%= order.bill_address.firstname %> <%= order.bill_address.lastname %></p>
                  <p>&nbsp;</p>
                  <% if order.payment_method.is_a?(PaymentMethod::SberBankInvoice) %>
                    <p><%= link_to 'скачать квитанцию', orders_sberbank_invoice_path(order), class: 'button' %></p>
                  <% end %>
                  <p><br>&nbsp;</p>
                  <p>Доставка: <%= order.shipping_method.name %></p>
                  <p>Получатель: <%= order.ship_address.firstname %> <%= order.ship_address.lastname %></p>
                  <p>Адрес доставки заказа:</p>
                  <p><%= order.ship_address.address1 %></p>
                  <p><br>&nbsp;</p>
<!--                   <form>
                    <h5>Печатные формы:</h5>
                    <input type="checkbox"><label>Инвойс</label>
                    <input type="checkbox"><label>Квитанция</label>
                    <p><input type="submit" class="button" value="ПЕЧАТЬ"></p>
                  </form> -->
                </div>
                <h4>Заказанные продукты:</h4>
                <ul class="dotted">
                  <% order.line_items.each do |line_item| %>
                    <li>
                      <p class="num">кол-во: <%= line_item.quantity %></p>
                      <p class="name"><%= line_item.variant.product.name %></p>
                      <p>
                        <span class="size">размер: 43</span>
                        <span class="color">цвет: черный</span>
                        <span class="price">цена:   <%= product_price(line_item.variant) %></span>
                      </p>
                    </li>
                  <% end %>
                </ul>
              </div>
            </li>
            <% end %>
          <% end %>
        </ul>
      </div>

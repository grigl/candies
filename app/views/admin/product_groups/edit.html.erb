<%= render 'admin/shared/product_sub_menu' %>

<h1><%= t('editing_product_group') %></h1>

<fieldset id="product_group_forms_container">

  <%= form_for(@product_group, :url => object_url, :html => { :id => 'product-group-form', :method => :put, :multipart => :true }) do |f| %>

      <%= f.field_container :name do %>
        <%= f.label :name, t("name") %><br />
        <%= f.text_field :name %>
        <%= f.error_message_on :name %>
      <% end %>
      
      <%= f.field_container :icon do %>
    	<%= f.label :icon, t('icon') %><br />
    	<%= f.file_field :icon %>
	  <% end %>
      
    <%=  button t("update") %>

  <% end %>

</fieldset>


<fieldset id="preview_container">
  <%= render 'preview' %>
</fieldset>
